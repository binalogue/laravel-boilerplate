{
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "lint:js": "./node_modules/.bin/eslint --ext .js,.vue --fix resources/js",
    "lint:css": "./node_modules/.bin/stylelint --config .stylelintrc.order.json --fix resources/**/*.{scss,vue}",
    "lint:php": "./vendor/bin/phpcpd app/ --min-lines=50 && ./vendor/bin/phpcbf --standard=PSR2 --extensions=php app",
    "lint": "yarn lint:js && yarn lint:css && yarn lint:php",
    "favicon:generate": "./node_modules/.bin/real-favicon generate .favicon/faviconDescription.json .favicon/faviconData.json public",
    "favicon:inject": "./node_modules/.bin/real-favicon inject .favicon/faviconData.json resources/views/modules resources/views/modules/icons.blade.php",
    "favicon:check": "./node_modules/.bin/real-favicon check-for-update --fail-on-update .favicon/faviconData.json",
    "dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "yarn dev --watch",
    "prod": "cross-env NODE_ENV=production MIX_APP_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "cli-real-favicon": "^0.0.8",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-vue": "^5.2.2",
    "husky": "^2.4.1",
    "imagemin": "^7.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-webp": "^5.1.0",
    "laravel-mix": "^4.0.16",
    "laravel-mix-purgecss": "^4.1.0",
    "lint-staged": "^8.2.1",
    "resolve-url-loader": "^3.1.0",
    "sass": "^1.21.0",
    "sass-loader": "^7.1.0",
    "sass-resources-loader": "^2.0.1",
    "stylelint": "^10.1.0",
    "stylelint-config-airbnb": "^0.0.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^3.0.0",
    "stylelint-scss": "^3.8.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "vue-template-compiler": "^2.6.10"
  },
  "dependencies": {
    "@mgoigfer/vue-social-media": "^0.2.0",
    "axios": "^0.19.0",
    "js-cookie": "^2.2.0",
    "lang.js": "^1.1.14",
    "mobile-detect": "^1.4.3",
    "pxloader": "^1.1.2",
    "simplebar": "^2.6.1",
    "vue": "^2.6.10",
    "vue-router": "^3.0.6",
    "vuex": "^3.1.1"
  },
  "browserslist": [
    "> 0.5%",
    "> 5% in ES",
    "last 2 versions",
    "not dead"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "app/**/*.php": [
      "./vendor/bin/phpcpd --min-lines=50",
      "./vendor/bin/phpcbf --standard=PSR2"
    ],
    "resources/js/**/*.js": [
      "./node_modules/.bin/eslint --fix",
      "git add"
    ],
    "resources/js/**/*.vue": [
      "./node_modules/.bin/eslint --fix",
      "./node_modules/.bin/stylelint --config .stylelintrc.order.json --fix",
      "git add"
    ],
    "resources/sass/**/*.scss": [
      "./node_modules/.bin/stylelint --config .stylelintrc.order.json --fix",
      "git add"
    ]
  }
}
